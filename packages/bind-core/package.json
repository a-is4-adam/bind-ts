{
	"name": "@bind-ts/bind-core",
	"version": "0.0.3",
	"description": "Type-safe, framework-agnostic state management for compound components",
	"author": "",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/a-is4-adam/bind-ts.git",
		"directory": "packages/bind-core"
	},
	"bugs": {
		"url": "https://github.com/a-is4-adam/bind-ts/issues"
	},
	"type": "module",
	"types": "dist/esm/index.d.ts",
	"main": "dist/cjs/index.cjs",
	"module": "dist/esm/index.js",
	"exports": {
		".": {
			"import": {
				"types": "./dist/esm/index.d.ts",
				"default": "./dist/esm/index.js"
			},
			"require": {
				"types": "./dist/cjs/index.d.cts",
				"default": "./dist/cjs/index.cjs"
			}
		},
		"./package.json": "./package.json"
	},
	"sideEffects": false,
	"files": [
		"dist",
		"src",
		"!**/__tests__"
	],
	"scripts": {
		"build": "vite build && tsc --emitDeclarationOnly --outDir dist/esm",
		"test": "vitest run",
		"test:watch": "vitest",
		"check-types": "tsc --noEmit"
	},
	"dependencies": {
		"@tanstack/store": "^0.7.7"
	},
	"devDependencies": {
		"typescript": "^5.9.2",
		"vite": "^6.3.5",
		"vitest": "^3.2.4"
	},
	"publishConfig": {
		"access": "public"
	}
}
