{
	"name": "@bind-ts/react-bind",
	"version": "0.0.4",
	"description": "React bindings for @bind-ts/core - type-safe compound component binding",
	"author": "",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/a-is4-adam/bind-ts.git",
		"directory": "packages/react-bind"
	},
	"homepage": "https://github.com/a-is4-adam/bind-ts/tree/main/packages/react-bind#readme",
	"bugs": {
		"url": "https://github.com/a-is4-adam/bind-ts/issues"
	},
	"type": "module",
	"types": "dist/esm/index.d.ts",
	"main": "dist/cjs/index.cjs",
	"module": "dist/esm/index.js",
	"exports": {
		".": {
			"import": {
				"types": "./dist/esm/index.d.ts",
				"default": "./dist/esm/index.js"
			},
			"require": {
				"types": "./dist/cjs/index.d.cts",
				"default": "./dist/cjs/index.cjs"
			}
		},
		"./package.json": "./package.json"
	},
	"sideEffects": false,
	"files": [
		"dist",
		"src",
		"!**/__tests__"
	],
	"scripts": {
		"build": "vite build && tsc --emitDeclarationOnly --outDir dist/esm",
		"test": "vitest run",
		"test:watch": "vitest",
		"check-types": "tsc --noEmit"
	},
	"dependencies": {
		"@bind-ts/bind-core": "workspace:*",
		"@tanstack/react-store": "^0.7.0"
	},
	"peerDependencies": {
		"react": ">=18.0.0"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.6.0",
		"@testing-library/react": "^16.0.0",
		"@types/react": "^19.0.0",
		"jsdom": "^26.1.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"typescript": "^5.9.2",
		"vite": "^6.3.5",
		"vitest": "^3.2.4"
	},
	"publishConfig": {
		"access": "public"
	}
}
