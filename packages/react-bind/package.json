{
	"name": "@bind/react-bind",
	"version": "0.0.1",
	"description": "React bindings for @bind/core - type-safe exclusive selection state management",
	"author": "",
	"license": "MIT",
	"type": "module",
	"types": "dist/esm/index.d.ts",
	"main": "dist/cjs/index.cjs",
	"module": "dist/esm/index.js",
	"exports": {
		".": {
			"import": {
				"types": "./dist/esm/index.d.ts",
				"default": "./dist/esm/index.js"
			},
			"require": {
				"types": "./dist/cjs/index.d.cts",
				"default": "./dist/cjs/index.cjs"
			}
		},
		"./package.json": "./package.json"
	},
	"sideEffects": false,
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"build": "vite build && tsc --emitDeclarationOnly --outDir dist/esm",
		"test": "vitest run",
		"test:watch": "vitest",
		"check-types": "tsc --noEmit"
	},
	"dependencies": {
		"@bind/bind-core": "workspace:*",
		"@tanstack/react-store": "^0.7.0"
	},
	"peerDependencies": {
		"react": ">=18.0.0"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.6.0",
		"@testing-library/react": "^16.0.0",
		"@types/react": "^19.0.0",
		"jsdom": "^26.1.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"typescript": "^5.9.2",
		"vite": "^6.3.5",
		"vitest": "^3.2.4"
	}
}
